<h1> Hello world</h1>
<p> This is paragraph</p>

<table>
    <thead>
        <tr>
        <th> Title </th>
        <th> Author </th>
        <th> Content </th>
        <th> Actions </th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article|%>
            <tr> 
                <td> <%= article.title %> </td>
                <td> <%= article.author %> </td>
                <td> <%= article.content.truncate(50) %> </td>
                <td> 
                <%= link_to edit_article_path(article.id) do %>  
                Edit
                <% end %>
                <%=
                link_to article_path(article.id), method: :delete, data: {confirm: "Sure ka?"} do %>  
                Delete
                <% end %>
                </td>
            </tr>
        <%end%>
    </tbody>
</table>

<%= link_to new_article_path do %>
    New Article
<%end%>